{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "deno.unstable", "dom"],
    "strict": true
  },
  "tasks": {
    "start": "deno run --allow-net --allow-env index.ts"
  },
  "lint": {
    "files": {
      "include": ["**/*.ts"]
    }
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": true
    }
  },
  "importMap": "./import_map.json"
}